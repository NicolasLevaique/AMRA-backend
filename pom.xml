        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-actuator</artifactId>
        </dependency>
        <!-- end::actuator[] -->
    </dependencies>

    <properties>
        <start-class>com.amra.backend.amra-backend.Application</start-class>
